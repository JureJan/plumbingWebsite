/* Global Centering Utility */
.centered-section {
    display: flex;               /* Enable flexbox */
    justify-content: center;     /* Horizontally center */
    align-items: center;         /* Vertically center */
    flex-direction: column;      /* Stack content vertically */
    height: 100vh;               /* Take full viewport height */
    text-align: center;          /* Center text alignment */
    padding: 20px;               /* Optional padding */
    box-sizing: border-box;      /* Include padding in width/height calculations */
  }
  
  /* Ensure images or elements scale correctly */
  .responsive-image {
    width: 100%;                 /* Full width of the container */
    max-width: 1200px;           /* Optional: Limit the maximum width */
    height: auto;                /* Maintain aspect ratio */
    object-fit: cover;           /* Optional: Cover container area */
  }
  
  /* For mobile responsiveness */
  @media (max-width: 768px) {
    .centered-section {
      padding: 10px;
    }
  }
  



  "use client"; // Marking this as a client component

import Navbar from "../app/components/navbar";
import Footer from "../app/components/footer";
import "../styles/vodene-vadbe.css"; // Path to the page's CSS
import Image from "next/image";

export default function VodeneVadbe() {
  const programs = [
    {
      title: "Les Mills Grit CARDIO",
      description: "Les Mills GRIT Cardio je 30-minutni visoko-intenzivni intervalni trening (HIIT).",
      benefits: [
        "Povečana srčno-žilna kapaciteta.",
        "Maksimalna poraba kalorij.",
        "Dvig anaerobnega praga.",
        "Super trening za izboljšanje postave.",
      ],
      videoLink: "https://www.youtube.com/embed/JWaZk-lZ_iY",
      image: "/images/maxxCardio.jpg",
    },
    {
      title: "Program 2",
      description: "Opis programa 2. Tukaj lahko dodate podrobnosti o programu.",
      benefits: [
        "Izboljšana gibljivost.",
        "Večja moč in vzdržljivost.",
        "Program prilagojen različnim starostnim skupinam.",
      ],
      videoLink: "https://www.youtube.com/embed/5AXG4cOKfXw",
      image: "/images/maxxAthletic.jpg",
    },
    // Add 6 more programs here...
    {
      title: "Program 8 (Zaključno poglavje)",
      description: "Zaključna misel za naše vadbe.",
      benefits: [
        "Doseg svojih ciljev z MaxxGym.",
